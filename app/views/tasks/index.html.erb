<% if logged_in? %>
  <h1>タスク一覧</h1>
  <p>ユーザ: <%= current_user.name %></p>
   <table class="table table-striped">
    <thead>
      <tr>
        <th>id</th>
        <th>タスク</th>
        <th>ステータス</th>
      </tr>
    </thead>
    <tbody>
      <% @tasks.each do |tasklist| %>
        <tr>
          <td><%= link_to tasklist.id, tasklist %></td> : <td><%= tasklist.content %></td> &gt; <td><%= tasklist.status %></td></li>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= link_to '新規の作成', new_task_path, class: "btn btn-primary" %>
<% else %>
  <div class="center jumbotron">
    <div class="text-center">
      <h1>TaskList</h1>
      <%= link_to '新規登録', signup_path, class: 'btn btn-lg btn-primary' %>
      <%= link_to 'ログイン', login_path, class: 'btn btn-lg btn-primary' %>
    </div>
  </div>
<% end %>




